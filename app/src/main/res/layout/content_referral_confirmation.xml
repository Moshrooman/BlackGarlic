<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.blackgarlic.blackgarlic.Referral.ReferralConfirmation"
    tools:showIn="@layout/activity_referral_confirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fontPath="fonts/Roboto-Medium.ttf"
            android:text="Successfully Submitted Referral!"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/BGGREEN"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here's How To Redeem This Referral"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                fontPath="fonts/Roboto-Bold.ttf"
                android:textSize="35dp"
                android:textColor="@color/BGGREEN"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask your friend to create a new BlackGarlic account using the email referred:"
                fontPath="fonts/Roboto-Medium.ttf"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                fontPath="fonts/Roboto-Bold.ttf"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:id="@+id/emailReferredTextView"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                fontPath="fonts/Roboto-Bold.ttf"
                android:textSize="35dp"
                android:textColor="@color/BGGREEN"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After creating a new account, go into the tab and select &quot;Referral Redemption&quot; and enter the code:"
                fontPath="fonts/Roboto-Medium.ttf"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                fontPath="fonts/Roboto-Bold.ttf"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:id="@+id/codeReferredTextView"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                fontPath="fonts/Roboto-Bold.ttf"
                android:textSize="35dp"
                android:textColor="@color/BGGREEN"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sit back, relax, and wait for your BlackGarlic Magic Box to arrive!"
                fontPath="fonts/Roboto-Medium.ttf"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/confirmationmagicbox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/checkoutbutton"
            android:textColor="@color/BGGREY"
            android:textSize="15dp"
            fontPath="fonts/Roboto-Bold.ttf"
            android:padding="5dp"
            android:text="Back To Menus"
            android:id="@+id/backToMenusReferralConfirmation"
            />

    </LinearLayout>

</ScrollView>
