<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.blackgarlic.blackgarlic.CreateAccount"
    tools:showIn="@layout/activity_create_account"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/createAccountFirstName"
        android:layout_marginTop="80dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/createAccountLastName"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/createAccountEmail"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/createAccountPassword"
        android:layout_marginTop="30dp"
        />

    <org.apmem.tools.layouts.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/createAccountShowPasswordCheckBox"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"

            />

    </org.apmem.tools.layouts.FlowLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signUpButton"
        />

</LinearLayout>
