<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.blackgarlic.blackgarlic.CreateAccount"
    tools:showIn="@layout/activity_create_account">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/createAccountFirstName"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:id="@+id/createAccountLastName"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:id="@+id/createAccountEmail"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:id="@+id/createAccountPassword"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="470dp"
        android:id="@+id/signUpButton"
        />

</RelativeLayout>
