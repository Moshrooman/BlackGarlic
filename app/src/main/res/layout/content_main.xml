<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Welcome Chef: Name\nClick For My Account"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/welcomeTextView"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/recyclerListView"
                android:background="#FFF"
                android:layout_marginTop="50dp"
                >

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="67dp"
                android:background="#000000"
                android:id="@+id/tabRelativeLayout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkout"
                    android:textSize="40dp"
                    android:textColor="#e74c3c"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/orderQuantityTextView"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderBoxImageView"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/orderboxone"
                    android:layout_marginTop="5dp"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear All"
                    android:textSize="10dp"
                    android:background="#FFF"
                    android:textColor="#000"
                    android:id="@+id/clearAllButton"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="5dp"
                    android:onClick="clearAll"
                    />


            </RelativeLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/nestedScrollView"
                >

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tabRelativeLayout"
                    android:id="@+id/orderSummaryListView"
                    >

                </ListView>

            </android.support.v4.widget.NestedScrollView>

            </RelativeLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>


</RelativeLayout>
