<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.blackgarlic.blackgarlic.CookBookModel.CookBookClicked"
    tools:showIn="@layout/activity_cook_book_clicked"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/exitbutton"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:text="X"
            android:textSize="12dp"
            android:textColor="@color/BGGREEN"
            android:gravity="center"
            android:id="@+id/exitButton"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            fontPath="fonts/Roboto-Medium.ttf"
            android:textColor="@color/BGGREEN"
            android:text="Overview"
            android:layout_centerHorizontal="true"
            android:id="@+id/viewPagerTitle"
            android:layout_marginTop="13dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/greenshare"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:textColor="@color/BGGREEN"
            android:gravity="center"
            android:id="@+id/shareButtonImageView"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dotsLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/viewPagerTitle"
            android:orientation="horizontal"
            android:gravity="center"
            >

        </LinearLayout>


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cookBookViewPager"
        >

    </android.support.v4.view.ViewPager>

</LinearLayout>
