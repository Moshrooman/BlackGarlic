<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/orderCheckOutNetworkImageView"
            fresco:actualImageScaleType="centerInside"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Title"
            android:id="@+id/orderCheckOutMenuTitle"
            android:layout_below="@+id/orderCheckOutNetworkImageView"
            fontPath="fonts/Roboto-Medium.ttf"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portion"
            android:id="@+id/orderCheckOutPortion"
            android:layout_below="@+id/orderCheckOutMenuTitle"
            android:layout_marginTop="10dp"
            fontPath="fonts/Roboto-Medium.ttf"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Type"
            android:id="@+id/orderCheckOutMenuType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            fontPath="fonts/Roboto-Medium.ttf"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/orderCheckOutPrice"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            fontPath="fonts/Roboto-Medium.ttf"
            />

    </RelativeLayout>

</LinearLayout>